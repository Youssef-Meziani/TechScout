<!-- featured categories area start -->
<div class="featured-categories-area pb-40">
  <div class="container-fluid">
    <div class="section-title">
      <h3>Laptop <span>brands</span></h3>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="featured-cat-active owl-carousel owl-arrow-style">

          {% for brand, count in data.brands %}
            {% if loop.index % 3 == 1 %}
              <div class="pro-layout-two-single-item">
            {% endif %}

            <div class="product-layout-two mb-30">
              <div class="product-layout-info">
                <h4 class="pro-name"><a href="#">{{ brand|upper }}</a></h4>
                <p class="total-items">{{ count }} laptops</p>
                <a href="#" class="shop-btn">+ show laptops</a>
              </div>
              <div class="product-layout-thumb">
                <a href="#"><img src="{{ directory }}/assets/img/product/laptop.png" alt="Laptop Brand image"></a>
              </div>
            </div>

            {% if loop.index % 3 == 0 or loop.last %}
              </div>
            {% endif %}
          {% endfor %}

        </div>
      </div>
    </div>
  </div>
</div>
<!-- featured categories area end -->
